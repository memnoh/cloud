doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css')
    script(type='text/javascript', src="http://code.jquery.com/jquery-1.9.1.min.js")
    script(type='text/javascript', src="http://code.jquery.com/ui/1.11.4/jquery-ui.js")
    script(type='text/javascript', src="/javascripts/index.js")
  body
    p
      a(href="/") Home
    p 
      total results: #{total}
    span -----------------------------------------------
    block beforeFacets
    span -----------------------------------------------
    p GENRES
      for facet in facets.genres.buckets
        p
          a(href="#{urlPrefix}filter=genres:#{facet.value}") #{facet.value}: #{facet.count}
    p RATING
      for facet in facets.rating.buckets
        p 
          a(href="#{urlPrefix}filter=rating:#{facet.value}") #{facet.value}: #{facet.count}
    p YEAR
      for facet in facets.year.buckets
        p
          a(href="#{urlPrefix}filter=year:#{facet.value}") #{facet.value}: #{facet.count}
    span -----------------------------------------------
    block afterFacets
    span -----------------------------------------------